<section>
    <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title">create new blog post</h2><hr>

  <form class="new-post-form" enctype="multipart/form-data">
    <div>
      <label for="post-title">title:</label>
      <input class="input" type="text" id="post-title" name="post-title" placeholder="insert blog title here"/>
    </div>
    <div class="select">
      <select class="input" name="post-category">
        <option>Select dropdown</option>
        <option>Animal</option>
        <option>Plant</option>
        <option>Person</option>
        <option>Disease</option>
        <option>Insect</option>
        <option>Other</option>
      </select>
    </div>
    <div id="file-img-upload" class="file has-name">
      <label class="file-label">
        <input class="file-input" type="file" name="imgUpload">
        <span class="file-cta">
          <span class="file-icon">
            <i class="fas fa-upload"></i>
          </span>
          <span class="file-label">
            Choose a fileâ€¦
          </span>
        </span>
        <span class="file-name">
          No file uploaded
        </span>
      </label>
    </div>
    <div>
      <label for="post-content">content:</label>
      <input class="textarea is-large" id="post-content" name="post-content" placeholder="insert blog content here"/>
    </div>
    <button type="submit" class="button is-primary is-pulled-right">create post</button>
  </form>
</section>

<script src="/javascript/add-post.js"></script>